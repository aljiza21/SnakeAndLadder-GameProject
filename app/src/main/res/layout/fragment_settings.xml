<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/instruc_bg" />

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="390dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Each player puts their counter on the space that says 'Start Game'."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Next, you need to gather some players. The game is best played with 2-4 players, and it is suitable for children and adults."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Each player places it at the starting point, which is usually square 1."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-If your counter lands on the head of a snake, you must slide down to the bottom of the snake."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-The first player rolls a die (or uses a random number generator), and moves their game piece that many squares forward on the board."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If the player lands on a square with the bottom of a ladder, they can climb up the ladder to the square at the top of the ladder. This allows them to skip ahead several squares."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If the player lands on a square with the head of a snake, they must slide down the snake to the square at the bottom of the snake. This means they have to go back several squares."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The goal of the game is to be the first player to reach the final square (square 100)."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If a player rolls a number that would take them beyond square 100, they do not move and must wait until their next turn to try again."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If a player lands on square 100 exactly, they win the game!"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can play multiple rounds of the game to determine an overall winner."
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>